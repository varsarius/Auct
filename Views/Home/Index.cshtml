@model IEnumerable<auct.Models.TaskItem>

@{
    ViewData["Title"] = "Home";
}
<h1>Tasks</h1>

<form asp-action="Index" method="post">
    <input type="text"
           name="name"
           placeholder="Enter task…"
           required />
    <button type="submit">Add</button>
</form>

<ul>
@foreach (var t in Model)
{
    <li>
        @t.Name

        <form asp-action="Delete"
              asp-route-id="@t.Id"
              method="post"
              style="display:inline">
            <button type="submit">
                Delete
            </button>
        </form>
        <a asp-action="Edit" asp-route-id="@t.Id" style="display:inline">Edit</a>
    </li>
}
</ul>

